<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignUp03_01Activity">
    <TextView
        android:id="@+id/siginup4guidetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Upload your profile photo"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#F59D00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profilephotoguide"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Take a new photo or upload from your library to set your profile photo."
        android:textAlignment="center"
        android:textColor="#616161"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siginup4guidetextView" />
    <androidx.cardview.widget.CardView
        android:id="@+id/uploadprofile"
        android:layout_width="242dp"
        android:layout_height="242dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/uploadprofile"
        app:cardCornerRadius="121dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilephotoguide">
        <ImageView
            android:id="@+id/uploadprofileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/uploadprofile"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilephotoguide"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/profilephotoguideCamera"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tap to add a photo(Camera)"
        android:textAlignment="center"
        android:textColor="#B7B7B7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadprofile" />
    <TextView
        android:id="@+id/profilephotoguideGallery"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tap to add a photo(Gallery)"
        android:textAlignment="center"
        android:textColor="#B7B7B7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilephotoguideCamera" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skipButton"
        android:layout_width="104dp"
        android:layout_height="47dp"
        android:layout_marginTop="133dp"
        android:background="@drawable/roundedge_8"
        android:elevation="2dp"
        android:text="Skip"
        android:textAllCaps="false"
        android:textColor="#F4BE18"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilephotoguideCamera" />



</androidx.constraintlayout.widget.ConstraintLayout>